{
  "name": "template-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "cd server && npm run dev",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:server\"",
    "build": "tsc && vite build",
    "build:server": "cd server && npm run build",
    "build:full": "npm run build && npm run build:server",
    "preview": "vite preview",
    "preview:server": "cd server && npm start",
    "start": "cd server && npm start",
    "install:all": "npm install && cd server && npm install",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:full": "rm -rf dist node_modules/.vite node_modules && npm install",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/assets"
  },
  "dependencies": {
    "emoji-picker-react": "^4.13.2",
    "motion": "^12.23.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-window": "^1.8.11",
    "react-window-infinite-loader": "^1.0.10",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-window": "^1.8.8",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "terser": "^5.43.1",
    "typescript": "~5.7.2",
    "vite": "^6.2.0"
  }
}
